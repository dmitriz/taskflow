{
  "name": "gmail-task-capture",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/fetch-emails.js",
    "dev": "tsx watch fetch-emails.ts",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && [ -d secrets ] && cp -r secrets dist/secrets || echo 'No secrets directory to copy'",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts,.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "googleapis": "^131.0.0",
    "open": "^8.4.0",
    "server-destroy": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.3",
    "@types/server-destroy": "^1.0.4",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "nock": "^13.3.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vitest": "^3.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmitriz/taskflow.git"
  },
  "keywords": [
    "tasks",
    "automation",
    "capture",
    "email"
  ],
  "author": "dmitriz",
  "license": "MIT"
}
